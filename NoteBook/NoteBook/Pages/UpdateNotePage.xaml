<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteBook.Pages.UpdateNotePage">
  <StackLayout>
    <Entry x:Name="NoteNameEntry" BindingContext="{x:Reference Name=NoteNameEntry}" Placeholder = "Name"/>
    <Entry x:Name="NoteTextEntry"  BindingContext="{x:Reference Name=NoteTextEntry}"  Placeholder = "Text"  />
    <Entry x:Name="NoteIdEntry"  BindingContext="{x:Reference Name=NoteIdEntry}"  Placeholder = "Text" IsVisible="False" />
    <Button Text = "Update note" FontSize="Medium" BorderWidth="1" Clicked="OnUpdateNote"/>
    <Label x:Name="StateLabel" FontSize="Large"></Label>
  </StackLayout>
</ContentPage>