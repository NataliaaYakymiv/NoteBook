<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteBook.Pages.RegisterPage">
  <StackLayout>
    <Label x:Name="TextLabel" FontSize="Large">Sign up</Label>
    <Entry x:Name="LoginEntry" BindingContext="{x:Reference Name=LoginEntry}" Placeholder = "Login"/>
    <Entry x:Name="PasswordEntry"  BindingContext="{x:Reference Name=PasswordEntry}"  Placeholder = "Password" IsPassword ="True" />
    <Button Text = "Registration" FontSize="Medium" BorderWidth="1" Clicked="OnRegister"/>
  </StackLayout>
</ContentPage>