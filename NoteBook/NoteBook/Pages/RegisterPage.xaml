<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteBook.Pages.RegisterPage">
  <StackLayout>

    <Label x:Name="TextLabel" HorizontalOptions="Center" FontSize="Large">Sign up</Label>
    <Entry x:Name="LoginEntry" BindingContext="{x:Reference Name=LoginEntry}" Placeholder = "Login"/>
    <Entry x:Name="PasswordEntry" Placeholder = "Password" IsPassword ="True" />
    <Entry x:Name="RePasswordEntry" Placeholder ="Confirm password" IsPassword ="True" />

    <Button x:Name="RegisterButton" Text ="Registration" FontSize="Medium" BorderWidth="1" Clicked="OnRegister"/>
    <ActivityIndicator x:Name="ActivityIndicatorRegister" IsVisible="False" IsRunning="False" />

    <Label x:Name="StatusLabel" FontSize="Large"></Label>

  </StackLayout>

</ContentPage>