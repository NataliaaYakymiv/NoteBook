<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteBook.Pages.LoginPage">
  
  <StackLayout x:Name="Layout">
    <Label x:Name="TextLabel" HorizontalTextAlignment="Center" FontSize="Large">Sign in</Label>
      <Entry x:Name="LoginEntry" Placeholder = "Login" Text="qwerty"/>
      <Entry x:Name="PasswordEntry"  Placeholder = "Password" IsPassword ="True" Text="qwerty"/>
      <Button Text ="Sign in" FontSize="Medium" BorderWidth="1" Clicked="OnLogin"/>
    <Label x:Name="StateLabel" FontSize="Large" HorizontalTextAlignment="Center"></Label>
    <StackLayout VerticalOptions="End">
      <Button Text ="Facebook" FontSize="Medium" BorderWidth="1" Clicked="OnFacebookLogin" BackgroundColor="#3b579d" TextColor="White"/>
      <Button Text ="Google" FontSize="Medium" BorderWidth="1" Clicked="OnGoogleLogin" BackgroundColor="#cf4332" TextColor="White"/>
      <Button Text ="LinkedIn" FontSize="Medium" BorderWidth="1" Clicked="OnLinkedinLogin" BackgroundColor="#006599" TextColor="White"/>
    </StackLayout>
  </StackLayout>
  

</ContentPage>